{% if product.metafields.custom._product_care_instrucations_heading != blank %}
   <div class="product__block">
    <details
      id="Details-{{ block.id }}-{{ section.id }}"
      class="accordion-details"
      is="accordion-group"
      {% if block.settings.default_open_care %}
        open
        aria-expanded="true"
      {% else %}
        aria-expanded="false"
      {% endif %}
    >
      <summary class="accordion-details__summary flex items-center justify-between">
        <div class="flex items-center gap-2">
        <h2 class="h4 inline-richtext">
           {{ product.metafields.custom._product_care_instrucations_heading }}
        </h2>
        </div>
      <div class="accordion_icon"> {%- render 'icon-plus-toggle' -%}</div>
      </summary>
      <div class="accordion-details__content rte">
       <div class="accodions_content">
          {% render 'care_instructions' %}
       </div>
      </div>
    </details>
   </div>
{% endif %}
